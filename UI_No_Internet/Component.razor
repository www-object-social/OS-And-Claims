@if (this.UI.Network is Unit.infomation.Network.Online) return;
<object data="/_content/UI_No_Internet/cloud.svg" />
@code{
    protected override Task OnInitializedAsync()
    {
        var PmT = PM.Register;
        this.UI.Change += () => {
            if (this.UI.Network is Unit.infomation.Network.Offline)
            {
                PmT.Install();
            }
            else {
                PmT.Done();
            }
            InvokeAsync(this.StateHasChanged);
        };
        return base.OnInitializedAsync();
    }
}